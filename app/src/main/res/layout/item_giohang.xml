<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:id="@+id/item_giohang_img"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_media_24"
            android:layout_height="80dp">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/item_giohang_tensp"
                ></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:weightSum="20"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="6"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_giohang_gia"
                    android:text="25000000"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    ></TextView>
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="25dp"

                    android:id="@+id/item_giohang_tru"
                    android:src="@drawable/ic_remove_24"
                    ></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_giohang_soluong"
                    android:text="1"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    ></TextView>
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_giohang_cong"
                    android:src="@drawable/ic_add_24"
                    ></ImageView>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_handle_24"
                    ></ImageView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_giohang_giatien"
                    android:text="25000 VND"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="6"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>