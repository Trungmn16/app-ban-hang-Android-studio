<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".activity.LienheActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FD1E1E"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#FD1E1E"
            android:layout_marginLeft="5dp"
            android:id="@+id/img_quaylai"

            android:src="@drawable/ic_baseline_west_24">

        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Chat"

            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="150dp"
            android:id="@+id/img_chitiet"
            android:src="@drawable/laptop"
            android:layout_height="200dp">

        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_tensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Laptop Dell Vostro V3568"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/txt_giasanpham"
                android:text="Giá: 12,200,000 VND"
                android:textColor="#F4511E"
                ></TextView>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="chi tiết sản phẩm"
                android:textColor="#918D8D"
                ></TextView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Chip: Intel Core i5-7200U RAM: DDR4 4GB (2 khe cắm)
Ổ cứng: HDD 1TB Chipset đồ họa: Intel HD Graphics 620
Màn hình: 15.6 Inches
 Hệ điều hành: Free Dos
Pin: 4 Cell Lithium-ion"
                    android:id="@+id/txtmotachitiet"
                    android:textColor="#918D8D"
                    ></TextView>

            </ScrollView>

        </LinearLayout>



    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="250dp"
            android:fitsSystemWindows="true"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/chat"
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="  Gửi tin nhắn..."
                    android:inputType="text"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_anh"
                    android:src="@drawable/ic_baseline_image_24"></ImageView>
                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_video"
                    android:src="@drawable/ic_baseline_video_library_24"></ImageView>
                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_file"
                    android:src="@drawable/ic_baseline_attach_file_24"></ImageView>

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="150dp"
                    android:id="@+id/img_send"
                    android:src="@drawable/ic_baseline_send_24"></ImageView>

            </LinearLayout>

        </LinearLayout>



</LinearLayout>