<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.reset_pass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD1E1E"
        android:orientation="horizontal"

        >

        <ImageButton
            android:id="@+id/img_reset_quaylai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#FD1E1E"

            android:src="@drawable/ic_baseline_west_24">

        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="Khôi phục mật khẩu"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="250dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_resetpass"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email_24"
            android:drawablePadding="10dp"
            ></EditText>>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_resetpass"
        android:layout_marginRight="10dp"
        android:background="@color/purple_500"
        android:layout_marginTop="25dp"
        android:text="Tiếp tục"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        ></Button>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:id="@+id/progressbarReset"
        ></ProgressBar>

</LinearLayout>