<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_item_donhang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_local_shipping_24"></ImageView>
            <LinearLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/img_item_donhang"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:id="@+id/item_tensp_donhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laptop"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/item_soluongsp_donhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="So luong: 234"
                    android:textSize="15sp"></TextView>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>